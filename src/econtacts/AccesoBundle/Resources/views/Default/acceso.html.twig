{% extends "econtactsHomeBundle:Default:base_home.html.twig" %}

{% block title "Symfony Forms Tutorial" %}

{% block content %}
<div align="center" >
	
    <form action="" style="width:300px;height:150px;margin-bottom:10px;font-family:Arial, Helvetica, sans-serif;margin-top:30px;
    background:white;border-radius:5px;" method="POST" {{ form_enctype(form) }}>
    <h2 align=left style="margin-left:35px;">Acceder a tu cuenta</h2>
    <hr>
    <p  align=left style="margin-bottom:5px;margin-top:10px;margin-left:35px;font-size:0.7em;">Ingresa tu nombre de usuario y contraseña</p>
    {{ form_errors(form) }}
    <table class=margin_cont >
        <tr align=left valign=top>
		<td	>{{ form_label(form.usuario) }}</td>
        <td>{{ form_widget(form.usuario) }}</td>
        <td>{{ form_errors(form.usuario) }}</td>
		</tr>
		
		<tr align=left valign=top>
		<td>{{ form_label(form.password) }}</td>       
        <td>{{ form_widget(form.password) }}</td>
        <td>{{ form_errors(form.password) }}</td>
		</tr>
		
		<tr align=left valign=top>
		<td>{{ form_rest(form) }}</td>
		</tr>
		
		<tr align=left valign=top>
		<td><input type="submit" value="Acceder" style="width:60px;height:25px;font-family:Arial, Helvetica, sans-serif;" /></td>
		<td align="center"><p style="font-size:0.7em;"><a href="/Symfony/web/app_dev.php/registro">Registrate</a> </p></td>
		<td></td>
		</tr>
		
	</table>
       
    </form>
    
    </div>
{% endblock %}
